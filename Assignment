//question 4

function sum(N) {
    abJodDo = 0;
    for (let nisha = 1; nisha <= N; nisha++) {
        abJodDo = abJodDo + nisha;


    }
    return abJodDo;
}
let JodBarabar = sum(8);
console.log(JodBarabar);


//question 5
function reverse(N) {
    let num = N;
    let temp = 0;

    while (num != 0) {
        let digit = num % 10;
        temp = temp * 10 + digit;
        num = Math.floor(num / 10);
    }

    return temp;
}

let r = reverse(554);
console.log(r);

//question 6
function natural(N) {
    let num = 1;
    let sum = 0;

    while (num <= N) {
        sum = sum + num;
        num++;
    }

    return sum;
}

let n = natural(5);
console.log(n);

//question 7

function EvenOdd(N) {
    let num = N;
    if (num % 2 == 0) {
        console.log("number is even");
    } else {
        console.log("number is odd");
    }
}
EvenOdd(4);
EvenOdd(5);

