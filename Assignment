let arr1 = [
    [1, 2, 3, 4, 5],  // Row 1
    [6, 7, 8, 9, 10], // Row 2
    [11, 12, 13, 14, 15], // Row 3
    [16, 17, 18, 19, 20], // Row 4
    [21, 22, 23, 24, 25]  // Row 5
];


console.log(arr1);


console.log("Element at row 3, column 4: " + arr1[2][3]);  
for (let i = 0; i < arr1.length; i++) {
    for (let j = 0; j < arr1[i].length; j++) {
        console.log(`arr1[${i}][${j}] = ${arr1[i][j]}`);
    }
}

//question 16

function fun1() {
    let a = 7;
    let b = 8;

    function fun2() {
        let sum = a + b;
        let minus = a - b;
        return { sum, minus };  
    }

    
    let result = fun2();
    console.log(result.sum); 
    console.log(result.minus); 
}

fun1();

